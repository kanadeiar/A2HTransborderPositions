<Window x:Class="A2HTransborderPositions.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:A2HTransborderPositions"
        mc:Ignorable="d"
        Height="500" Width="800" WindowStartupLocation="CenterScreen" ResizeMode="CanResizeWithGrip" Background="LightGreen"
        Title="{Binding Title}"
        DataContext="{Binding MainWindowViewModel, Source={StaticResource Locator}}">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Главное меню">
                <MenuItem Header="Выход" 
                          Command="{Binding CloseApplicationCommand}"/>

            </MenuItem>
        </Menu>
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>
                <TextBlock Text="Соединение с ПЛК отсутствует"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock Text="Информация"/>
            </StatusBarItem>
        </StatusBar>
        <TabControl>
            <TabItem Header="Информация" Height="40">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions >
                        <RowDefinition Height="Auto"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <GroupBox Header="Управление" Grid.ColumnSpan="2" Grid.Row="0">
                        <StackPanel Orientation="Horizontal">
                            <Button Margin="2" Padding="10">Считать текущие позиции</Button>
                            <Button Margin="2" Padding="10">Начать получение факта</Button>
                            <Button Margin="2" Padding="10">Прекратить получение факта</Button>
                        </StackPanel>
                    </GroupBox>
                    <GridSplitter Grid.Column="0" Grid.Row="1" Width="5" Background="Transparent"/>
                    <GroupBox Grid.Column="0" Grid.Row="1" Header="Позиции трансбордера" >
                        
                    </GroupBox>
                    <GroupBox Grid.Column="1" Grid.Row="1" Header="Параметры выбранной позиции" >
                        
                    </GroupBox>
                    
                    
                </Grid>
            </TabItem>
            <TabItem Header="Установка настроек" Height="40">
                <Grid>
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">Находится в разработке</TextBlock>
                </Grid>
            </TabItem>
            <TabItem Header="Автоподстройка" Height="40">
                <Grid>
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">Находится в разработке</TextBlock>
                </Grid>
            </TabItem>
        </TabControl>


    </DockPanel>
</Window>
